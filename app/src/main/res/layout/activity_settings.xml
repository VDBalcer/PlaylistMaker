<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/CommonToolbar"
        app:title="@string/settings" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">

        <com.google.android.material.textview.MaterialTextView
            style="@style/SettingItemTextView"
            android:text="@string/dark_mode" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switcher"
            style="@style/SettingItemIcon" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/share_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">

        <com.google.android.material.textview.MaterialTextView
            style="@style/SettingItemTextView"
            android:text="@string/title_share" />

        <ImageView
            style="@style/SettingItemIcon"
            android:src="@drawable/ic_share" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/write_support"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">

        <com.google.android.material.textview.MaterialTextView
            style="@style/SettingItemTextView"
            android:text="@string/title_support" />

        <ImageView
            style="@style/SettingItemIcon"
            android:src="@drawable/ic_support" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">

        <com.google.android.material.textview.MaterialTextView
            style="@style/SettingItemTextView"
            android:text="@string/title_agreement" />

        <ImageView
            style="@style/SettingItemIcon"
            android:src="@drawable/ic_arrow_forward" />

    </FrameLayout>

</LinearLayout>