<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".library.ui.favorite.FavoriteFragment">
    <LinearLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeholder_im"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="106dp"
            android:src="@drawable/im_not_found" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/placeholder_title"
            style="@style/PlaceholderText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/placeholder_text_margins"
            android:layout_marginBottom="@dimen/placeholder_text_margins"
            android:text="@string/library_favorite_placeholder_title_text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>