<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="textInputStyle">@style/SearchFieldStyle</item>
    </style>

    <style name="SearchFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="startIconTint">@color/gray</item>
        <item name="endIconTint">@color/gray</item>
    </style>
</resources>