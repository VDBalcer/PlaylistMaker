<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainToolbarTitleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">@dimen/heavy_font_weight</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_buttons_text_size</item>
        <item name="cornerRadius">@dimen/main_buttons_corner_radius</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/main_buttons_margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/main_buttons_margin_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:outlineSpotShadowColor">@color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/heavy_font_weight</item>
    </style>

    <style name="CommonToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/heavy_font_weight</item>
        <item name="navigationIconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="SettingItemTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/regular_font_weight</item>
        <item name="android:paddingHorizontal">@dimen/settings_items_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/settings_items_padding_vertical</item>
    </style>

    <style name="PlaceholderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/regular_font_weight</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
    </style>

    <style name="PlaceholderButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/placeholder_button_text_color</item>
        <item name="android:textSize">@dimen/placeholder_button_text_size</item>
        <item name="cornerRadius">@dimen/placeholder_button_corner_radius</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/placeholder_button_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/heavy_font_weight</item>
    </style>

    <style name="TrackPlayerText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/regular_font_weight</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
    </style>

    <style name="TrackPlayerInfoItem" parent="TrackPlayerText">
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>