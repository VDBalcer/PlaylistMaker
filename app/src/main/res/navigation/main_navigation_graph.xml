<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.search.ui.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_trackPlayerFragment"
            app:destination="@id/trackPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.playlistmaker.library.ui.LibraryFragment"
        android:label="@string/library"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_libraryFragment_to_trackPlayerFragment"
            app:destination="@id/trackPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.settings.ui.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/trackPlayerFragment"
        android:name="com.example.playlistmaker.player.ui.TrackPlayerFragment"
        android:label=""
        tools:layout="@layout/track_player" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.playlistmaker.library.ui.favorite.FavoriteFragment"
        android:label="fragment_library_favorite"
        tools:layout="@layout/fragment_library_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_trackPlayerFragment"
            app:destination="@id/trackPlayerFragment" />
    </fragment>
</navigation>